@model Plan1.Models.Permission

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Permission</legend>

        <div class="editor-label">Permission Type</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.permType)
            @Html.ValidationMessageFor(model => model.permType)
        </div>

        <div class="editor-label">Postal Address</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.postalAddr)
            @Html.ValidationMessageFor(model => model.postalAddr)
        </div>

        <div class="editor-label">Applicant Name</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.appName)
            @Html.ValidationMessageFor(model => model.appName)
        </div>

        <div class="editor-label">Application Date: DD-MM-YYYY</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.appDate)
            @Html.ValidationMessageFor(model => model.appDate)
        </div>

        <div class="editor-label">Architect's Name</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.archName)
            @Html.ValidationMessageFor(model => model.archName)
        </div>

        <div class="editor-label">Description of Development</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.devDesc)
            @Html.ValidationMessageFor(model => model.devDesc)
        </div>

        <div class="editor-label">Owner's name</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ownerName)
            @Html.ValidationMessageFor(model => model.ownerName)
        </div>

        <div class="editor-label">Address of Retained Building</div>            
        <div class="editor-field">
            @Html.EditorFor(model => model.retBldAddr)
            @Html.ValidationMessageFor(model => model.retBldAddr)
        </div>

        <div class="editor-label">Architect's Address</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.addrDrawer)
            @Html.ValidationMessageFor(model => model.addrDrawer)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("List All Records", "Index")
</div>
